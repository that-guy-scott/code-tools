{
  "mcpServers": {
    "jetbrains": {
      "command": "npx",
      "args": ["-y", "@jetbrains/mcp-proxy"],
      "env": {
        "HOST": "${JETBRAINS_HOST:-172.31.240.1}",
        "IDE_PORT": "${JETBRAINS_PORT:-63341}",
        "LOG_ENABLED": "${JETBRAINS_LOG:-true}"
      }
    },
    "github": {
      "command": "npx", 
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"]
    },
    "docker-mcp": {
      "command": "${DOCKER_MCP_COMMAND:-/home/owner/.local/bin/uvx}",
      "args": ["mcp-server-docker"]
    },
    "qdrant": {
      "command": "./mcp/venv-mcp/bin/mcp-server-qdrant",
      "env": {
        "QDRANT_URL": "http://localhost:${QDRANT_PORT:-6333}",
        "COLLECTION_NAME": "${QDRANT_COLLECTION:-{PROJECT_NAME_KEBAB}-memory}"
      }
    },
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://${POSTGRES_USER:-{PROJECT_NAME_KEBAB}}:${POSTGRES_PASSWORD:-{DATABASE_PASSWORD}}@localhost:${POSTGRES_PORT:-5432}/${POSTGRES_DB:-{PROJECT_NAME_KEBAB}_dev}"
      ]
    },
    "redis": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-redis",
        "redis://localhost:${REDIS_PORT:-6379}"
      ]
    },
    "neo4j-agent-memory": {
      "command": "npx",
      "args": [
        "-y", 
        "@knowall-ai/mcp-neo4j-agent-memory"
      ],
      "env": {
        "NEO4J_URI": "bolt://localhost:${NEO4J_BOLT_PORT:-7687}",
        "NEO4J_USERNAME": "${NEO4J_USERNAME:-neo4j}",
        "NEO4J_PASSWORD": "${NEO4J_PASSWORD:-{DATABASE_PASSWORD}}"
      }
    },
    "neo4j-server": {
      "command": "npx",
      "args": [
        "-y",
        "@alanse/mcp-neo4j-server"
      ],
      "env": {
        "NEO4J_URI": "bolt://localhost:${NEO4J_BOLT_PORT:-7687}",
        "NEO4J_USER": "${NEO4J_USERNAME:-neo4j}", 
        "NEO4J_PASSWORD": "${NEO4J_PASSWORD:-{DATABASE_PASSWORD}}"
      }
    }
  }
}
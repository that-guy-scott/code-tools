{
  "name": "llm-cli",
  "version": "2.0.0",
  "description": "Universal CLI for multiple LLM providers with MCP integration",
  "main": "llm-cli.js",
  "type": "module",
  "scripts": {
    "llm": "node llm-cli.js",
    "ollama": "node llm-cli.js --provider ollama",
    "gemini": "node llm-cli.js --provider gemini",
    "start": "node llm-cli.js",
    "legacy:ollama": "node src/ollama-cli.js",
    "legacy:gemini": "node src/gemini-cli.js"
  },
  "dependencies": {
    "ollama": "^0.5.9",
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "@google/generative-ai": "^0.21.0",
    "dotenv": "^16.4.5"
  },
  "keywords": ["llm", "cli", "ollama", "gemini", "openai", "anthropic", "mcp", "ai"],
  "author": "",
  "license": "MIT"
}